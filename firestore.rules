rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Can read any profile, create/update their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Only admins via functions
    }

    // Events: Authenticated users can read their own events and those shared with them.
    // Only the owner can update or delete their events.
    match /events/{eventId} {
      // Allow read if user is authenticated (query filtering happens in app)
      // The app queries with ownerId == uid, so we allow reads for authenticated users
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Stakeholders: Authenticated users can manage stakeholders.
    match /stakeholders/{stakeholderId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // EventStakeholders: Authenticated users can link/unlink stakeholders.
    match /eventStakeholders/{docId} {
      allow read, create, delete: if request.auth != null;
    }

    // Notifications: Users can only read and update their own notifications.
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
  }
}