{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "functions/lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "functions/src",
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "functions/src/**/*"
  ]
}